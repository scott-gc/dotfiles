#!/bin/sh
#
# write scrip to remove all the .sw* temp files from a directory
#
function purge_dir {
  extentions=('*.swp' '*.un~' '*.swo')
  for i in *;do
    if [ -d $i ];then
      echo "Removing files from ${i}"
      cd $i
      for ext in ${extentions[@]}; do
        find . -name $ext -type f -delete
      done
      purge_dir $i
    fi
  done
  cd ../
}

home=$(pwd -P)
purge_dir $home
